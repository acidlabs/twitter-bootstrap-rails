<%%- model_class = <%= resource_name.classify %> -%>
<div class="page-header">
  <h1><%%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table id="<%= resource_name.pluralize %>" class="table table-striped" data-source="<%%= <%= controller_routing_path %>_path(format: :json)%>">
  <thead>
    <tr>
      <%- columns.each do |column| -%>
      <th><%%= model_class.human_attribute_name(:<%= column.name %>) %></th>
      <%- end -%>
      <th><%%= model_class.human_attribute_name(:created_at) %></th>
      <th><%%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<%%= link_to t('.new', :default => t("helpers.links.new")),
            new_<%= singular_controller_routing_path %>_path,
            :class => 'btn btn-primary' %>
